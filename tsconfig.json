{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "nodeNext",
        "baseUrl": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "rules": {
        "allowNullableString": 1
    }
}